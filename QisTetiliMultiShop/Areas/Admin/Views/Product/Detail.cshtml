
@model Product
<div class="container">
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="~/assets/img/@Model.ProductImages.FirstOrDefault(img=>img.IsPrimary==true)?.Url" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5>Name: @Model.Name</h5>
                    <h5>Description: @Model.Description</h5>
                    <h5>Price: @Model.Price</h5>
                    <h5>Category: @Model.Category.Name</h5>
                    

                    <h4>Colors</h4>
                    <p>
                        @foreach (var item in Model.ProductColors)
                        {
                            <span>
                                @item.Color.Name
                            </span>
                        }
                    </p>

                    
                </div>
            </div>
        </div>
    </div>
    <a asp-action="index" asp-controller="product" class="btn btn-success">
        Go back
    </a>
</div>