@model CreateSettingVM
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Setting</h4>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label asp-for="Key">Setting key:</label>
                    <input asp-for="Key" class="form-control mb-3" placeholder="Key">
                    <span asp-validation-for="Key" class="text-danger fs-6 fst-italic"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Value">Setting value:</label>
                    <input asp-for="Value" class="form-control mb-3" placeholder="Value">
                    <span asp-validation-for="Value" class="text-danger fs-6 fst-italic"></span>
                </div>

                <button type="submit" class="btn btn-primary me-2 text-white">Submit</button>
                <a asp-action="index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>