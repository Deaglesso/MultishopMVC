@model CreateSlideVM
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Slide</h4>

            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Title">
                    <span class="text-danger fs-6 fst-italic" asp-validation-for="Title"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Description">
                    <span class="text-danger fs-6 fst-italic" asp-validation-for="Description"></span>

                </div>
                <div class="form-group">
                    <label asp-for="ButtonText">Button Text</label>
                    <input asp-for="ButtonText" class="form-control" placeholder="Button Text">
                    <span class="text-danger fs-6 fst-italic" asp-validation-for="ButtonText"></span>

                </div>
                <div class="form-group">
                    <label asp-for="ButtonLink">Button Link</label>
                    <input asp-for="ButtonLink" class="form-control" placeholder="Button Link">
                    <span class="text-danger fs-6 fst-italic" asp-validation-for="ButtonLink"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Order">Order</label>
                    <input asp-for="Order" class="form-control" placeholder="Order">
                    <span asp-validation-for="Order"></span>

                </div>
                <div class="form-group">
                    <label asp-for="File">Photo</label>
                    <input asp-for="File" class="form-control" placeholder="Upload Photo">
                    <span class="text-danger fs-6 fst-italic" asp-validation-for="File"></span>

                </div>




                
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button asp-action="Index" asp-controller="Slide" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>